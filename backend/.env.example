# Database
DATABASE_URL=sqlite:///./camit.db

# Email Configuration (Gmail SMTP)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your-email@gmail.com
EMAIL_PASSWORD=your-gmail-app-password
EMAIL_FROM=your-email@gmail.com

# Alert Recipients (comma-separated)
ALERT_RECIPIENTS=admin@school.com,security@school.com

# Detection Settings
FALL_CONFIDENCE_THRESHOLD=0.75
LYING_CONFIDENCE_THRESHOLD=0.80
LYING_TIME_THRESHOLD=5
PUSHING_CONFIDENCE_THRESHOLD=0.65
CROWD_THRESHOLD=10

# Alert Settings
ALERT_COOLDOWN_SECONDS=60
VIDEO_CLIP_DURATION=15
VIDEO_PRE_BUFFER=5

# Processing
PROCESS_EVERY_N_FRAMES=3
MAX_CAMERAS=6

# Storage
STORAGE_PATH=./storage
ALERT_RETENTION_DAYS=30
